<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient"
        android:orientation="vertical">
        <Button
            android:id="@+id/back_Register"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_baseline_arrow_back_24"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register"
            android:textSize="40sp"
            android:textStyle="bold"
            android:layout_marginHorizontal="100dp"
            android:layout_marginTop="70dp"
            android:textColor="@color/teal_200"/>



        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            android:backgroundTint="#754E729E"
            android:elevation="11dp"
            app:cardCornerRadius="10dp"
            >

            <EditText
                android:id="@+id/enter_email_Reg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Enter your email"
                android:textColorHint="@color/teal_200"
                android:textStyle=""
                android:ems="10"
                android:inputType="textEmailAddress"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:backgroundTint="#754E729E"
            android:elevation="11dp"
            app:cardCornerRadius="10dp"
            >

            <EditText
                android:id="@+id/enter_pass_register"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Enter your password"
                android:textColorHint="@color/teal_200"
                android:textStyle=""
                android:ems="10"
                android:inputType="textPassword"/>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView

            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:backgroundTint="#2C5178"
            android:elevation="11dp"
            app:cardCornerRadius="10dp"

            >


            <EditText
                android:id="@+id/enter_Cpassword_Register"
                android:layout_width="302dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Confirm password"
                android:inputType="textPassword"
                android:textColorHint="@color/teal_200" />


        </androidx.cardview.widget.CardView>


        <Button
            android:id="@+id/Register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register"
            android:backgroundTint="#316D9A"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:textColor="@color/teal_200"/>
        <TextView
            android:id="@+id/back_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="already a user/log in"
            android:textColor="@color/teal_200"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="5dp"
            android:clickable="true"
            />


    </LinearLayout>
</LinearLayout>